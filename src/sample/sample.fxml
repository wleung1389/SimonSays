<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.BackEnd"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button GridPane.columnIndex="2" textAlignment="center" text="Start" onAction="#startGame" fx:id="start"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="1" onAction = "#pressedBlue" style="-fx-background-color:rgb(0,0,82); -fx-padding:10 20 10 10; -fx-position:fixed;" visible="false" fx:id="blue"/>
    <Button GridPane.columnIndex="3" GridPane.rowIndex="1" onAction = "#pressedYellow" style="-fx-background-color:rgb(184,189,49); -fx-padding:10 20 10 10; -fx-position:fixed;" visible="false" fx:id="yellow"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="2" onAction = "#pressedGreen" style="-fx-background-color:rgb(0,82,0); -fx-padding:10 20 10 10; -fx-position:fixed;" visible="false" fx:id="green"/>
    <Button GridPane.columnIndex="3" GridPane.rowIndex="2" onAction = "#pressedRed" style="-fx-background-color:rgb(82,0,0); -fx-padding:10 20 10 10; -fx-position:fixed;" visible="false" fx:id="red"/>
    <Label fx:id = "text"/>
</GridPane>